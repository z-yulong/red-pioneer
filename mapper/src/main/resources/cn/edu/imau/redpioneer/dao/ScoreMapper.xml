  <select id="selectScoreNum" parameterType="integer" resultType="integer">
    SELECT COUNT(*) AS num FROM score WHERE activist_id=#{id}
  </select>

<!--通过姓名查询上一学年成绩-->
  <select id="selectNewScore" resultMap="ScoreListMap">
    SELECT s.id,a.name,s.moral,s.moral_ranking,s.comprehensive,s.comprehensive_ranking,s.class_size,s.is_firsthalf,s.state_code
    FROM activist AS a
    INNER JOIN score AS s
    ON a.id=s.activist_id
    WHERE a.id=#{id}
    ORDER BY s.id DESC LIMIT 0,2;
  </select>
<!--查询待审批的成绩-->
  <select id="selectScoreByState" resultMap="ScoreListMap">
    SELECT s.id,a.name,s.moral,s.moral,s.moral_ranking,s.comprehensive,s.comprehensive_ranking,s.class_size,s.is_firsthalf,s.state_code
    FROM activist AS a
    INNER JOIN score AS s
    ON a.id=s.activist_id
    WHERE s.state_code=#{state} AND a.party_group=#{id}
  </select>
</mapper>